---
import { Image } from "astro:assets";
import H1 from "./H1.astro";

import { getEntry } from 'astro:content';
const homepage = await getEntry("homepage", "index");
const { greet } = homepage.data;
import greetImage from '../images/blur_edges.png';
---

<section class="flex max-sm:flex-col flex-row gap-x-4 max-sm:justify-normal max-sm:items-center justify-evenly max-sm:gap-y-6">
    <div class="max-w-96 min-w-48 max-sm:max-w-56 flex items-center">
        <div class="w-full">
            <Image src={greetImage} alt="Фото репетитора" loading="eager" format="avif"/>
        </div>
    </div>  
    <div class="max-w-[30rem] max-sm:w-fit flex flex-col justify-center space-y-3">
        <div class="max-sm:text-start text-end text-text-800">
            <H1 text={greet.title} />
            <p class="w-full">{greet.description}</p>
        </div>
            <div class="flex justify-end">
            <button class="rounded-lg px-3 py-2 bg-primary-500 text-white font-semibold text-lg hover:bg-primary-600">Записаться</button>
        </div>
    </div>
</section>
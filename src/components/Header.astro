---
import { Icon } from 'astro-icon/components';

import menu from "../config/menu.json"
import HeaderMenu from './HeaderMenu';
interface NavigationLink {
    name: string;
    url: string;
}
const { main }: { main: NavigationLink[] } = menu;
---

<header class="sticky top-0 z-40 h-[6rem] bg-background-50 border-b border-primary-200">
    <div class="flex w-full justify-between items-center max-w-7xl px-16 py-4 max-sm:px-5 gap-x-4 mx-auto">
        <a href="/" class="flex items-center gap-x-4 max-sm:gap-x-2">
            <Icon name="doc" title='Логотип сайта' width={60} height={60} class="shrink-0 text-primary-500" />
            <p class="bg-gradient-to-r from-primary-500 to-secondary-500 bg-clip-text text-transparent uppercase text-2xl font-bold max-sm:text-lg max-sm:w-20 max-sm:text-center">Tutor Online</p>
        </a>
        <div>
            <HeaderMenu client:visible>
                <ul class="flex flex-row gap-x-8 max-lg:gap-x-5 max-sm:flex-col max-sm:space-y-4 max-sm:mt-10 items-center max-sm:items-start text-primary-500 uppercase text-sm">
                    {main.map((menuItem: NavigationLink) => 
                        <li class="text-end"><a href={menuItem.url} class="font-bold">{menuItem.name}</a></li>
                    )}
                </ul>
            </HeaderMenu>
        </div>
        
    </div>
</header>
---
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import { ViewTransitions } from 'astro:transitions';

interface Props {
	title: string;
	description?: string;
	image?: string;
}

const { title, description = 'Репетитор для подготовки к поступлению и экзаменам на медицинском факультете', image = "/images/study.avif" } = Astro.props;
---

<!doctype html>
<html lang="ru">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/heartbeat.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta property="og:image" content={image} />
		<title>{title}</title>
		<ViewTransitions />
	</head>
	<body class="bg-background-50 flex flex-col">
		<div class="min-h-screen space-y-8 mb-8">
			<Header />
			<slot class="grow" />
		</div>
		<Footer />
	</body>
</html>
